{
  "expo": {
    "name": "VoiceAssistant",
    "slug": "voice-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "voiceassistant",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voiceassistant.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.voiceassistant.app",
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Voice Assistant to access the microphone",
          "speechRecognitionPermission": "Allow Voice Assistant to securely recognize user speech"
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    }
  }
}

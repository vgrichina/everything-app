{
  "testCases": [
    {
      "request": "What time is it?",
      "expected": {
        "intent": "new",
        "widgetUrl": "display/clock/digital/light",
        "params": {
          "format": "HH:mm",
          "size": 48
        }
      }
    },
    {
      "request": "Can you show seconds as well?",
      "history": [
        {
          "request": "What time is it?",
          "params": {
            "format": "HH:mm",
            "size": 48
          }
        }
      ],
      "expected": {
        "intent": "modify",
        "widgetUrl": "display/clock/digital/light",
        "params": {
          "format": "HH:mm:ss",
          "size": 48
        }
      }
    },
    {
      "request": "Start a 5 minute timer",
      "expected": {
        "intent": "new",
        "widgetUrl": "interactive/timer/countdown/light",
        "params": {
          "duration": 300,
          "size": 48,
          "showControls": true
        }
      }
    },
    {
      "request": "Make it count down from 10 minutes instead",
      "history": [
        {
          "request": "Start a 5 minute timer",
          "params": {
            "duration": 300,
            "size": 48,
            "showControls": true
          }
        }
      ],
      "expected": {
        "intent": "modify",
        "widgetUrl": "interactive/timer/countdown/light",
        "params": {
          "duration": 600,
          "size": 48,
          "showControls": true
        }
      }
    },
    {
      "request": "I need to make a shopping list",
      "expected": {
        "intent": "new",
        "widgetUrl": "input/list/editable/light",
        "params": {
          "title": "Shopping List",
          "items": [],
          "withCheckboxes": true
        }
      }
    },
    {
      "request": "Add milk eggs and bread to the list",
      "history": [
        {
          "request": "I need to make a shopping list",
          "params": {
            "title": "Shopping List",
            "items": [],
            "withCheckboxes": true
          }
        }
      ],
      "expected": {
        "intent": "modify",
        "widgetUrl": "input/list/editable/light",
        "params": {
          "title": "Shopping List",
          "items": ["Milk", "Eggs", "Bread"],
          "withCheckboxes": true
        }
      }
    },
    {
      "request": "Show me the weather forecast",
      "expected": {
        "intent": "new",
        "widgetUrl": "display/weather/card/light",
        "params": {
          "location": "current",
          "unit": "celsius",
          "showHourly": false
        }
      }
    },
    {
      "request": "Can I see the hourly forecast?",
      "history": [
        {
          "request": "Show me the weather forecast",
          "params": {
            "location": "current",
            "unit": "celsius",
            "showHourly": false
          }
        }
      ],
      "expected": {
        "intent": "modify",
        "widgetUrl": "display/weather/card/light",
        "params": {
          "location": "current",
          "unit": "celsius",
          "showHourly": true,
          "hours": 24
        }
      }
    },
    {
      "request": "Take a quick note",
      "expected": {
        "intent": "new",
        "widgetUrl": "input/note/editable/light",
        "params": {
          "title": "Quick Note",
          "content": "",
          "timestamp": true
        }
      }
    },
    {
      "request": "Write down: remember to call mom tomorrow",
      "history": [
        {
          "request": "Take a quick note",
          "params": {
            "title": "Quick Note",
            "content": "",
            "timestamp": true
          }
        }
      ],
      "expected": {
        "intent": "modify",
        "widgetUrl": "input/note/editable/light",
        "params": {
          "title": "Quick Note",
          "content": "Remember to call mom tomorrow",
          "timestamp": true
        }
      }
    }
  ]
}
